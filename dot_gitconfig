[commit]
	gpgsign = true
[merge]
	ff = false
[log]
	date = auto:human
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[diff]
  colorMoved = default
  external = difft
  tool = difftastic

[difftool]
  prompt = false

[difftool "difftastic"]
